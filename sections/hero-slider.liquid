
    <div class="tp-slider-active-2 swiper-container">
       <div class="swiper-wrapper">
        {% for block in section.blocks %}

                {% assign item = block.settings %}


          <div class="tp-slider-item-2 tp-slider-height-2 p-relative swiper-slide grey-bg-5 d-flex align-items-end">
             <div class="tp-slider-2-shape">
                <img class="tp-slider-2-shape-1" src="{{'shape-1.png' | asset_url }}" alt="shape">
             </div>
             <div class="container">
                <div class="row align-items-center">
                   <div class="col-xl-6 col-lg-6 col-md-6">
                      <div class="tp-slider-content-2">
                         <span> {{ item.label_heading }} </span>
                         <h3 class="tp-slider-title-2">{{ item.label_heading }}</h3>
                         <div class="tp-slider-btn-2">

                            <a href="{{ item.button_url }}" class="tp-btn tp-btn-border">{{ item.btn_txt }}</a>

                         </div>
                      </div>
                   </div>
                   <div class="col-xl-6 col-lg-6 col-md-6">
                      <div class="tp-slider-thumb-2-wrapper p-relative">
                         <div class="tp-slider-thumb-2-shape">
                            <img class="tp-slider-thumb-2-shape-1" src="{{  }}" alt="">
                            <img class="tp-slider-thumb-2-shape-2" src="{{  }}" alt="">
                         </div>
                         <div class="tp-slider-thumb-2 text-end">
                            <span class="tp-slider-thumb-2-gradient"></span>
                            <img src="{{ item.slider_img | img_url: '1900x' }}" alt="{{ item.label_heading }}">
                         </div>
                      </div>
                   </div>
                </div>
             </div>
          </div>
        {% endfor %}
       </div>
       <div class="tp-swiper-dot tp-slider-2-dot"></div>
    </div>




{% schema %}
    {
        "name": "Hero Slider",
        "tag": "section",
        "class": "tp-slider-area p-relative z-index-1",
        "settings": [

        ],
        "blocks": [
            {
                "name": "Slide",
                "type": "slider",
                "limit": 5,
                "settings": [
                    {
                        "type": "text",
                        "id": "heading",
                        "label": "Heading",
                        "default": "New Arrivals 2023"
                    },
                    {
                        "type": "text",
                        "id": "label_heading",
                        "label": "Lavel Text",
                        "default": "The Clothing Collection"
                    },
                    {
                        "type": "text",
                        "id": "btn_txt",
                        "label": "Button Text",
                        "default": "Shop Collection"
                    },
                    {
                        "type": "url",
                        "id": "button_url",
                        "label": "Button Link"
                    },
                    {
                        "type": "image_picker",
                        "id": "slider_img",
                        "label": "Select Slider Image"
                    }
                ]
            }
        ],
        "presets": [
            {
                "name": "Hero Slider"
            }
        ]
    }
{% endschema %}