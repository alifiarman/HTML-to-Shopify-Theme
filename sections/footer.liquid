




  <div class="tp-footer-area tp-footer-style-2" data-bg-color="footer-bg-white">
     <div class="tp-footer-top pt-95 pb-40">
        <div class="container">
           <div class="row">

           {%  for block in section.blocks %}  


            {% case block.type %}

               {% when "logo_text" %}
                  {% assign item = block.settings %}

              <div class="col-xl-4 col-lg-3 col-md-4 col-sm-6">
                 <div class="tp-footer-widget footer-col-1 mb-50">
                    <div class="tp-footer-widget-content">
                       <div class="tp-footer-logo">
                          <a href="{{ shop.url }}">
                             <img src="{{item.footer_logo | img_url: '150x60'}}" alt="logo">
                          </a>
                       </div>
                       <p class="tp-footer-desc">{{ item.footer_txt }}</p>
                       {% if item.show_social_icon != blank %}
                           <div class="tp-footer-social">
                              <a href="#"><i class="fa-brands fa-facebook-f"></i></a>
                              <a href="#"><i class="fa-brands fa-twitter"></i></a>
                              <a href="#"><i class="fa-brands fa-linkedin-in"></i></a>
                              <a href="#"><i class="fa-brands fa-vimeo-v"></i></a>
                           </div>
                        {% endif %}
                    </div>
                 </div>
              </div>

              {% when "menu_link" %}

               {% assign item = block.settings %}


              <div class="col-xl-2 col-lg-3 col-md-4 col-sm-6">
                 <div class="tp-footer-widget footer-col-2 mb-50">
                    <h4 class="tp-footer-widget-title">{{ item.link_heading }}</h4>
                    <div class="tp-footer-widget-content">

                       <ul>
                        {% for link in item.footer_menu_link.links %}
                           <li><a href="{{ link.url }}">{{ link.title }}</a></li>
                        {% endfor %}
                       </ul>

                    </div>
                 </div>
              </div>

              {% when "contuct" %}

               {% assign item = block.settings %}

              <div class="col-xl-3 col-lg-3 col-md-4 col-sm-6">
                 <div class="tp-footer-widget footer-col-4 mb-50">
                    <h4 class="tp-footer-widget-title">{{ item.contuct_heading }}</h4>
                    <div class="tp-footer-widget-content">
                       <div class="tp-footer-talk mb-20">
                          <span>{{ item.label_text }}</span>
                          <h4><a href="tel:{{ item.number }}">{{ item.number }}</a></h4>
                       </div>
                       <div class="tp-footer-contact">
                        {% if item.email != blank %}
                          <div class="tp-footer-contact-item d-flex align-items-start">
                             <div class="tp-footer-contact-icon">
                                <span>
                                   <svg width="18" height="16" viewBox="0 0 18 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                                      <path d="M1 5C1 2.2 2.6 1 5 1H13C15.4 1 17 2.2 17 5V10.6C17 13.4 15.4 14.6 13 14.6H5" stroke="currentColor" stroke-width="1.5" stroke-miterlimit="10" stroke-linecap="round" stroke-linejoin="round"/>
                                      <path d="M13 5.40039L10.496 7.40039C9.672 8.05639 8.32 8.05639 7.496 7.40039L5 5.40039" stroke="currentColor" stroke-width="1.5" stroke-miterlimit="10" stroke-linecap="round" stroke-linejoin="round"/>
                                      <path d="M1 11.4004H5.8" stroke="currentColor" stroke-width="1.5" stroke-miterlimit="10" stroke-linecap="round" stroke-linejoin="round"/>
                                      <path d="M1 8.19922H3.4" stroke="currentColor" stroke-width="1.5" stroke-miterlimit="10" stroke-linecap="round" stroke-linejoin="round"/>
                                   </svg>
                                </span>
                             </div>
                             <div class="tp-footer-contact-content">
                                <p><a href="{{ item.email }}">{{ item.email }}</a></p>
                             </div>
                          </div>
                        {% endif %}
                        {% if item.location != blank %}
                          <div class="tp-footer-contact-item d-flex align-items-start">
                             <div class="tp-footer-contact-icon">
                                <span>
                                   <svg width="17" height="20" viewBox="0 0 17 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                                      <path d="M8.50001 10.9417C9.99877 10.9417 11.2138 9.72668 11.2138 8.22791C11.2138 6.72915 9.99877 5.51416 8.50001 5.51416C7.00124 5.51416 5.78625 6.72915 5.78625 8.22791C5.78625 9.72668 7.00124 10.9417 8.50001 10.9417Z" stroke="currentColor" stroke-width="1.5"/>
                                      <path d="M1.21115 6.64496C2.92464 -0.887449 14.0841 -0.878751 15.7889 6.65366C16.7891 11.0722 14.0406 14.8123 11.6313 17.126C9.88298 18.8134 7.11704 18.8134 5.36006 17.126C2.95943 14.8123 0.210885 11.0635 1.21115 6.64496Z" stroke="currentColor" stroke-width="1.5"/>
                                   </svg>
                                </span>
                             </div>
                             <div class="tp-footer-contact-content">
                                <p><a href="{{ item.location_url }}" target="_blank">{{ item.location }}</a></p>
                             </div>
                          </div>
                        {% endif %}
                       </div>
                    </div>
                 </div>
              </div>

              
            {% else %}
                              
            {% endcase %}

            {% endfor %}
           </div>
        </div>
     </div>


     <div class="tp-footer-bottom">
        <div class="container">
           <div class="tp-footer-bottom-wrapper">
              <div class="row align-items-center">
                 <div class="col-md-6">
                    <div class="tp-footer-copyright">
                       {{ section.settings.footer_bottom_text }}
                    </div>
                 </div>
                 <div class="col-md-6">
                    <div class="tp-footer-payment text-md-end">
                       <p>
                          <img src="assets/img/footer/footer-pay-2.png" alt="">
                       </p>
                    </div>
                 </div>
              </div>
           </div>
        </div>
     </div>
  </div>



{% schema %}
{
  "name": "Footer",
  "tag": "footer",
  "class": "footer_class",
  "max_blocks": 4,
  "settings": [
      {
         "type": "header",
         "content": "Footer Bottom"
      },
      {
         "type": "richtext",
         "id": "footer_bottom_text",
         "label": "Footer Bottom Text",
         "default": "<p>Â© 2023 All Rights Reserved  |  HTML Template by Themepure.</p>"
      }
  ],
  "blocks": [
      {
         "name": "Log Part",
         "type": "logo_text",
         "limit": 1,
         "settings": [
            {
               "type": "image_picker",
               "id": "footer_logo",
               "label": "Chose A logo For Footer"
            },
            {
               "type": "text",
               "id": "footer_txt",
               "label": "Sub Heading",
               "default": "We are a team of designers and developers that create high quality WordPress"
            },
            {
               "type": "checkbox",
               "id": "show_social_icon",
               "label": "Show Social Icon",
               "default": true
            }
         ]
      },
      {
         "name": "Menu Link",
         "type": "menu_link",
         "limit": 2,
         "settings": [
            {
               "type": "text",
               "id": "link_heading",
               "label": "Heading",
               "default": "My Account"
            },
            {
               "type": "link_list",
               "id": "footer_menu_link",
               "label": "Select a Menu"
            }
         ]
      },
      {
         "name": "Contuct",
         "type": "contuct",
         "limit": 1,
         "settings": [
            {
               "type": "text",
               "id": "contuct_heading",
               "label": "Heading",
               "default": "Talk To Us"
            },
            {
               "type": "text",
               "id": "label_text",
               "label": "Sub Heading",
               "default": "Got Questions? Call us"
            },
            {
               "type": "text",
               "id": "number",
               "label": "Phone Number",
               "default": "+670 413 90 762"
            },
            {
               "type": "text",
               "id": "email",
               "label": "E-mail Address",
               "default": "shofy@support.com"
            },
            {
               "type": "textarea",
               "id": "location",
               "label": "Location",
               "default": "79 Sleepy Hollow St. <br> Jamaica, New York 1432"
            },
            {
               "type": "url",
               "id": "location_url",
               "label": "Location Map Url"
            }
         ]
      }
  ]
}
{% endschema %}