
{% liquid
    assign s = section.settings
    assign logo = s.logo_img | img_url: 'master'
    assign heading = s.heading
    assign url = s.heading_url
    assign s_heading = s.sub_heading
%}

<section class="tp-instagram-area">
    <div class="container-fluid pl-20 pr-20">
       <div class="row row-cols-lg-5 row-cols-sm-2 row-cols-1 gx-2 gy-2 gy-lg-0">

        {% for block in section.blocks%}
            {% assign img = block.settings.g_img %}
            <div class="col">
                <div class="tp-instagram-item-2 w-img">
                    <img src="{{img | img_url: 'master'}}" alt="">
                    <div class="tp-instagram-icon-2">
                    <a href="{{img | img_url: 'master'}}" class="popup-image"><i class="fa-brands fa-instagram"></i></a>
                    </div>
                </div>
            </div>
            {% if forloop.index == 2 %}
            <div class="col">
                <div class="tp-instagram-banner text-center">
                    <div class="tp-instagram-banner-icon mb-40">
                        <a href="#">
                            <img src="{{logo}}" alt="">
                        </a>
                    </div>
                    <div class="tp-instagram-banner-content">
                        <span>{{ s_heading }}</span>
                        <a href="{{url}}">{{ heading }}</a>
                    </div>
                </div>
            </div>
            {% endif %}

        {% endfor %}
       </div>
    </div>
 </section>


 {% schema %}
    {
        "name": "Instagram",
        "tag": "section",
        "class": "tp-instagram-area",
        "settings": [
            {
                "type": "image_picker",
                "id": "logo_img",
                "label": "Select Instagram Logo"
            },
            {
                "type": "text",
                "id": "heading",
                "label": "Heading",
                "default": "Instagram"
            },
            {
                "type": "text",
                "id": "sub_heading",
                "label": "Sub Heading",
                "default": "Follow Us on"
            },
            {
                "type": "url",
                "id": "heading_url",
                "label": "Select a URL"
            }
        ],
        "blocks": [
            {
                "name": "Grid Column",
                "type": "grid_col",
                "limit": 4,
                "settings": [
                    {
                        "type": "image_picker",
                        "id": "g_img",
                        "label": "Choose a Image"
                    }
                ]
            }
        ],
        "presets": [
            {
                "name": "Instagram"
            }
        ]
    }
 {% endschema %}